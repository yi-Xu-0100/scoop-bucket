{
    "version": "2.12.14",
    "description": "一款第三方的阿里云盘客户端，支持 Windows、macOS",
    "homepage": "https://github.com/liupan1890/aliyunpan",
    "license": "Unknown",
    "url": "https://s81.lanzoug.com/062920bb/2022/04/15/af2d521d296daee2a3a2e3855a9835d6.7z?st=srL5l_AKnqe2PGg69osV7w&e=1656507746&b=CbJawlDvUb1ZiwDaVeBU4FOJD7QNlVPoA7dY6waLA_bYE3wiAAVYFaVRvVCJSdAYwCXIOYwQ3CyMHZQsyXXQEMQkh&fi=67583278&pid=49-72-217-11&up=2&mp=0&co=1",
    "extract_dir": "阿里云盘小白羊版v2",
    "installer": {
        "script": [
            "    # Rename",
            "Get-ChildItem -r \"$dir\\阿里云盘小白羊版*.exe\" | Rename-Item -newname \"$dir\\阿里云盘小白羊版.exe\"",
            "# handle runtime cache",
            "if (!(Test-Path $persist_dir)) {",
            "    New-Item $persist_dir -Type Directory -Force | Out-Null",
            "}",
            "$runtimeCache = \"$env:APPDATA\\alixby\"",
            "$runtimeCachePersist = \"$persist_dir\\appdata\"",
            "if (Test-Path $runtimeCachePersist) {",
            "    Remove-Item $runtimeCache -Force -Recurse -ErrorAction SilentlyContinue",
            "    New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
            "} else {",
            "    if (Test-Path $runtimeCache) {",
            "        Move-Item $runtimeCache $runtimeCachePersist -Force",
            "        New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
            "    }",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "$runtimeCache = \"$env:APPDATA\\alixby\"",
            "$runtimeCachePersist = \"$persist_dir\\appdata\"",
            "if (!(Test-Path $runtimeCachePersist)) {",
            "    Move-Item $runtimeCache $runtimeCachePersist -Force",
            "} else {",
            "    Remove-Item $runtimeCache -Force -Recurse -ErrorAction SilentlyContinue",
            "}"
        ]
    },
    "shortcuts": [
        [
            "阿里云盘小白羊版.exe",
            "阿里云盘小白羊版"
        ]
    ]
}
